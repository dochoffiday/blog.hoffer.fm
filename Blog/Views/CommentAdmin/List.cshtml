@model IEnumerable<BC.Models.BC_Comment>

@{
    Layout = null;
}

<table id="list">
    <tr>
        <th>
            Name
        </th>
        <th>Blurb</th>
        <th class="medlarge">
            Created
        </th>
        <th class="medlarge">IP</th>
        <th class="small"></th>
        <th class="small"></th>
        <th class="small"></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            @if (item.IsRead)
            {
                <td>@item.Name</td>
            }
            else
            {
                <td class="red">@item.Name</td>
            }
            <td>
                @{
                    var blurb = item.Text;
                    var blurbLength = 100;

                    if (!string.IsNullOrWhiteSpace(blurb) && blurb.Length > blurbLength)
                    {
                        blurb = blurb.Substring(0, blurbLength) + "...";
                    }
                }
                @blurb
            </td>
            <td>
                @String.Format("{0:g}", item.Created)
            </td>
            <td>@item.IP</td>
            <td class="center">
                @Html.ActionLink("Edit", "edit", new { id = item.CommentID })
            </td>
            <td class="center">
                @Html.ActionLink("Details", "details", new { id = item.CommentID })
            </td>
            <td class="center">
                @Html.ActionLink("Delete", "delete", new { id = item.CommentID })
            </td>
        </tr>
    }

</table>

