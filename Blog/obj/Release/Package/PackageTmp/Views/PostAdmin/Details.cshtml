@model BC.Models.BC_Post

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>@Model.Title</h2>
<p>
    '@Model.Title' details:
</p>

<fieldset>
    <div class="display-label">CategoryID</div>
    <div class="display-field">@Model.CategoryID</div>

    <div class="display-label">Title</div>
    <div class="display-field">@Model.Title</div>

    <div class="display-label">Slug</div>
    <div class="display-field">@Model.Slug</div>

    <div class="display-label">Body</div>
    <div class="display-field">@Model.Body</div>

    <div class="display-label">Tags</div>
    <div class="display-field">@Model.Tags_AsString()</div>

    <div class="display-label">Comments Are Open</div>
    <div class="display-field">@Model.IsCommentsOpen.ToString()</div>

    <div class="display-label">Show Comments</div>
    <div class="display-field">@Model.IsCommentsVisible.ToString()</div>

    <div class="display-label">Publish Date</div>
    <div class="display-field">@String.Format("{0:g}", Model.PublishDate)</div>

    <div class="display-label">Created</div>
    <div class="display-field">@String.Format("{0:g}", Model.Created)</div>

    <div class="display-label">Modified</div>
    <div class="display-field">@String.Format("{0:g}", Model.Modified)</div>
</fieldset>

<p class="breadcrumb">
    @Html.ActionLink("Edit", "edit", new { id = Model.PostID }) |
    @Html.ActionLink("<- Back to List", "index")
</p>


