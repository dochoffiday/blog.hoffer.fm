@model BC.Models.BC_Comment

@{
    Layout = null;
}

<div class="mtop row">
    <div class="twocol">
        &nbsp;
    </div>
    <div class="sixcol">
        <div class="comment-name">@Html.Raw("@") <b>@Model.Name</b></div>
        @if (Model.IsUser)
        {
            <div class="comment-text comment-user">@Html.Raw(Model.Text)</div>
        }
        else
        {
            <div class="comment-text">@Html.Raw(Model.Text)</div>
        }
        <div class="comment-date">@Model.Created.ToString("M.dd.yyyy - hh:mm tt")</div>
    </div>
    <div class="fourcol last">
        &nbsp;
    </div>
</div>