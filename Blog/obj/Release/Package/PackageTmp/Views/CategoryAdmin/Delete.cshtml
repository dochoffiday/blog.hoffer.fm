@model BC.Models.BC_Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Delete</h2>
<p>
    Are you sure you want to delete this Category?
</p>

<fieldset>
    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>
</fieldset>

<div class="warning">
    Are you sure you want to delete this Category?
    <br /><span class="breadcrumb">@Html.ActionLink("<- Back to List", "index")</span>
</div>
@using (Html.BeginForm())
{
    <p>
        <input type="submit" value="Delete" class="buttons negative submit" /> |
        <span class="breadcrumb">@Html.ActionLink("<- Back to List", "index")</span>
    </p>
}

